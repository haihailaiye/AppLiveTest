<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lihai.applivetest">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.RemoteService"
            android:process=":com.lihai.applivetest.service"/>

        <service
            android:name=".service.LocalService"
           />

        <service
            android:name=".service.RestartService"
            android:permission="android.permission.BIND_JOB_SERVICE"
            />

        <service android:name=".service.LocalService$InnerLocalService"/>
        <service android:name=".service.RemoteService$InnerRemoteService"/>
    </application>

</manifest>